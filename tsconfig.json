{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,

    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./**/test/**/*"
  ]
}
